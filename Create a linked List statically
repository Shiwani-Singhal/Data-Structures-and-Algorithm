#include<iostream>
using namespace std;
class node
{
    public:
    int  data;
    node * next;
    node(int data)
    {
        this->data=data;
        next = NULL;
    }
};
int main()
{
   node n1(1);
   node n2(2);
   node n3(3);
   node * head = &n1;
   n1.next = &n2;
   n2.next= &n3;
   cout<<n1.data<<endl;//data at n1
   cout<<head<<endl;// address of n1;
   cout<<n1.next<<endl; // address of n2
   cout<<&n2<<endl; // address of n2
   cout<<n2.data<<endl;
   cout<<n3.data<<endl;
   return 0;

}
