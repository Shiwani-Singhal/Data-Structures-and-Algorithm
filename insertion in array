#include<iostream>
using namespace std;
int main()
{
    int n,i;
    cout<<"Enter the size of the array:";
    cin>>n;
    int a[n];
    cout<<"Enter the elements of the array:";
    for(int i=0;i<n;i++)
    {
        cin>>a[i];
    }
    cout<<"Array before insertion is:";
    for(int i=0;i<n;i++)
    {
        cout<<a[i]<<" ";
    }
    int index,element;
    cout<<endl;
    cout<<"Enter the element:";
    cin>>element;
    cout<<"Enter the index value:";
    cin>>index;
    if(index>=0 && index<=n)
    {
        for(i = n;i>index;i--)
        {
            a[i]=a[i-1];
        }
        a[index]=element;
        cout<<"Array after insertion is: ";
        for(i =0;i<n;i++)
        {
            cout<<a[i]<<" ";
        }
    }
    else
    {
        cout<<"Invalid index";
    }
    return 0;
}
