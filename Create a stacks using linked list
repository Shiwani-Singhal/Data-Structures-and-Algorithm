#include<iostream>
using namespace std;
template <typename T>
class node
{
    public:
    T data;
    node<int> * next;
    node(T data)
    {
        this->data = data;
        next = NULL;
    }
};
template <typename T>
class stacks_LL
{
    node <int> * head;
    int size;
    
    public:
    stacks_LL()
    {
        head = NULL;
        size=0;
    }
    int getsize()
    {
        return size;
    }
    bool isEmpty()
    {
        return size==0;
    }
    void push(T data)
    {
        node<int> * newnode = new node<int>(data);
        newnode->next = head;
        head = newnode;
        size ++;
    }
    T top()
    {
        if(isEmpty())
        {
            cout<<"Stack is Empty";
        }
        return head->data;
    }
    T pop()
    {
        if(isEmpty())
        {
            cout<<"Stack is Empty";
        }
        int ans  = head ->data;
        node <int> * temp = head;
        head=head->next;
        delete temp;
        size--;
        return ans;
    }
    
    
};
int main()
{
    stacks_LL<int> s;
    s.push(10);
    s.push(20);
    s.push(30);
    s.push(40);
    s.push(50);
    
    cout<<s.top()<<endl;
    cout<<s.pop()<<endl;
    cout<<s.pop()<<endl;
    cout<<s.top()<<endl;
    cout<<s.getsize()<<endl;
    cout<<s.isEmpty()<<endl;
    
    return 0;
}
