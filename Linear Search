#include<iostream>
using namespace std;
int linear_search(int a[],int n,int num)
{
    for(int i =0;i<n;i++)
    {
        if(a[i]==num)
            return i;
    }
    return -1;
}
int main()
{
    int n;
    cout<<"Enter the number of elements in the array:";
    cin>>n;
    int a[n];
    for(int i =0;i<n;i++)
    {
        cin>>a[i];
    }
    cout<<"Enter the elements of the array:";
    for(int i=0;i<n;i++)
    {
        cout<<a[i]<<" ";
    }
    int num;
    cout<<"Enter the element that you wants to search: ";
    cin>>num;
    int result = linear_search(a,n,num);
    if(result==-1)
    {
        cout<<"Element is not present in the arraay:";
    }
    else
    {
        cout<<"Element "<<num<<" is present at index "<<result<<" in the given array";
    }
    return 0;
}
