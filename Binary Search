#include<iostream>
using namespace std;
int binary_search(int a[],int start ,int end,int num)
{
    if(end>=start)
    {
    int mid =start +  (end-start)/2;
    
    
    if(num==a[mid])

       return mid;

    else if(a[mid]>num)
     
        return binary_search(a,start,mid-1,num);
    
    else 
        return binary_search(a,mid+1,end,num);
    
    }
    return -1;

}
int main()
{
    int n;
    cout<<"Enter the number of elements in the array:";
    cin>>n;
    int a[n]; 
     cout<<"Enter the elements of the array:";
    for(int i =0;i<n;i++) 
    {
        cin>>a[i];
    }
    for(int i =0;i<n;i++)
    {
        cout<<a[i]<<" ";
    }
    int num;
    cout<<endl;
    cout<<"Enter the number that you want to search:";
    cin>>num;
   int result = binary_search(a,0,n-1,num);
    if(result == -1)
    {
        cout<<"Element is not present in the array";
    }
    else
    {
        cout<<"Element "<<num<<" is present at index "<<result<<" in the given array";
    }
    return 0;
}
