#include<iostream>
using namespace std;
template <typename T>
class stack_arr
{
    T * arr ;
    int nextindex,capacity;

    public:
    stack_arr()
    {
        arr = new T();
        nextindex = 0;
        capacity = 5;
    }
    int size()
    {
        return nextindex;
    }
    bool isEmpty()
    {
        if(nextindex==0)
        {
            return true;
        }
        else
        {
            return false;
        }
    }
    void push(T element)
    {
        if(capacity==nextindex)
        {
            int * newarr = new T(2*capacity);
            for(int i =0;i<capacity;i++)
            {
                newarr[i]=arr[i];
            }
            capacity = capacity*2;
            delete [] arr;
            newarr = arr;

        }
        else
        {
            arr[nextindex]= element;
            nextindex ++;
        }
    }
    int top()
    {
        if(isEmpty())
        {
            cout<<"Stack is Empty";
        }
        // nextindex--;
        return arr[nextindex-1];
    }
    int pop()
    {
        if(isEmpty())
        {
            cout<<"Stack is Empty";
        }
        nextindex--;
        return arr[nextindex];
    }
};
int main()
{
    stack_arr<int> s;
    s.push(10);
    s.push(20);
    s.push(30);
    s.push(40);
    s.push(50);
    s.push(60);

    cout<<s.top()<<endl;
    cout<<s.pop()<<endl;
    cout<<s.pop()<<endl;
    cout<<s.pop()<<endl;
    cout<<s.isEmpty()<<endl;
    cout<<s.size()<<endl;
    return 0;

}
