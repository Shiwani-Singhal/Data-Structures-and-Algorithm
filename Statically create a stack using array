#include<iostream>
using namespace std;
class stack_arr
{
    int * arr;
    int nextindex,capacity;

    public:
    stack_arr(int totalsize)
    {
        arr = new int(totalsize);
        nextindex = 0;
        capacity = totalsize;
    }
    int size()
    {
        return nextindex;
    }
    bool isEmpty()
    {
        if(nextindex==0)
        {
            return true;
        }
        else
        {
            return false;
        }
    }
    void push(int element)
    {
        if(nextindex==capacity)
        {
            cout<<"Stack overflow";
        }
        arr[nextindex]= element;
        nextindex++;
    }
    int top()
    {
        if(isEmpty())
        {
            cout<<"Stack underflow";
        }
        return arr[nextindex-1];
        
    }
    int pop()
    {
        if(isEmpty())
        {
            cout<<"Stack underflow";
        }
        nextindex--;
        return arr[nextindex];
    }

};
int main()
{
    stack_arr s(5);
    s.push(10);
    s.push(20);
    s.push(30);
    s.push(40);
    s.push(50);
    s.push(60);

    cout<<endl;
    cout<<s.top()<<endl;
    cout<<s.pop()<<endl;
    cout<<s.pop()<<endl;
    cout<<s.pop()<<endl;
    cout<<s.size()<<endl;
    cout<<s.isEmpty()<<endl;
    return 0;
}
